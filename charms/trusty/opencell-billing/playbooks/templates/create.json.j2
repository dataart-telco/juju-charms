{
  "id": "{{ APP_NAME}}",
  "cpus": {{ CPU }},
  "mem": {{ MEM }},
  "instances": 0,
  "constraints": [["hostname", "CLUSTER", "{{ HOSTNAME_VAR }}"]],
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "{{ DOCKER_IMAGE }}",
      "parameters": [
        { "key": "env", "value": "OPENCELL_HOST={{ OPENCELL_SERVICE_VAR }}" },
        { "key": "env", "value": "OPENCELL_USER={{ OPENCELL_USER_VAR }}" },
        { "key": "env", "value": "OPENCELL_PASSWORD={{ OPENCELL_PASSWORD_VAR }}" },
        { "key": "env", "value": "REDIS_SERVICE_HOST={{ REDIS_SERVICE_HOST_VAR }}" },
        { "key": "env", "value": "REDIS_SERVICE_PORT={{ REDIS_SERVICE_PORT_VAR }}" },
        { "key": "env", "value": "RESTCOMM_SERVICE={{ RESTCOMM_SERVICE_VAR }}" },
        { "key": "env", "value": "RESTCOMM_USER={{ RESTCOMM_USER_VAR }}" },
        { "key": "env", "value": "RESTCOMM_PASSWORD={{ RESTCOMM_PASSWORD_VAR }}" }
      ],
      "portMappings": [
        { "containerPort": {{ APP_PORT }}, "hostPort": 31080, "servicePort": 31080, "protocol": "tcp" }
      ]
    }
  }
}